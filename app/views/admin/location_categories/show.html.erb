<%= render 'manage/resources/show' do |resource| %>
  <%= content_tag(:tr, content_tag(:td, LocationCategory.human_attribute_name(:name)) + content_tag(:td, resource.name)) %>
  <%= content_tag(:tr, content_tag(:td, LocationCategory.human_attribute_name(:parent)) + content_tag(:td, (resource.parent.name rescue nil))) %>
  <%= content_tag(:tr, content_tag(:td, LocationCategory.human_attribute_name(:index)) + content_tag(:td, resource.index)) %>
  <%= content_tag(:tr, content_tag(:td, LocationEvent.human_attribute_name(:created_at)) + content_tag(:td, resource.created_at.strftime('%F %T'))) %>
<% end %>