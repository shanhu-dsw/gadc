<% content_for :information do %>
  <%= tag.div class: 'row' do %>
    <%= tag.div (manage_collection_select_field form, :location_division_id, Location.query_location_level_name('单位'), :id, :name, { include_blank: true }), class: 'col-md-3' %>
    <%= tag.div (manage_collection_select_field form, :location_id, Location.query_location_level_name('房间'), :id, :name, { include_blank: true }), class: 'col-md-3' %>
    <%= tag.div (manage_collection_select_field form, :camera_id, Camera.all, :id, :name, { include_blank: true }), class: 'col-md-3' %>
    <%= tag.div (manage_text_field form, :engine_id), class: 'col-md-3' %>
    <%= tag.div (manage_datetime_field form, :created_at), class: 'col-md-3' %>
    <div class="col-md-3">
      <div style="margin: 0 0 10px">
        <label for="location_lon">抓拍图片</label>
        <div class="location-upload-map-btn text-info"><%= @resource.img.filename.to_s.length > 0 ? @resource.img.filename : '点击上传巡检图片' %></div>
        <%= form.file_field  :img , class: 'location-form-control-map', style:'display:none' %>
      </div>
    </div>

    <%#= tag.div (manage_number_field form, :bodies_count), class: 'col-md-3' %>
    <%#= tag.div (manage_number_field form, :portraits_count), class: 'col-md-3' %>
  <% end %>
<% end %>

<%= render 'manage/resources/form', form: form, sections: { information: '基本信息' } %>