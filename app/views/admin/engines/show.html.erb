<%= render 'manage/resources/show' do |resource| %>
  <%= content_tag(:tr, content_tag(:td, Engine.human_attribute_name(:full_name)) + content_tag(:td, resource.full_name)) %>
  <%= content_tag(:tr, content_tag(:td, Engine.human_attribute_name(:secret)) + content_tag(:td, resource.secret)) %>
  <%= content_tag(:tr, content_tag(:td, Engine.human_attribute_name(:internal_address)) + content_tag(:td, resource.internal_address)) %>
  <%= content_tag(:tr, content_tag(:td, Engine.human_attribute_name(:external_address)) + content_tag(:td, resource.external_address)) %>
  <%= content_tag(:tr, content_tag(:td, Engine.human_attribute_name(:params)) + content_tag(:td, resource.params)) %>
  <%= content_tag(:tr, content_tag(:td, Engine.human_attribute_name(:workers)) + content_tag(:td, resource.workers)) %>
  <%= content_tag(:tr, content_tag(:td, Engine.human_attribute_name(:engine_type)) + content_tag(:td, resource.engine_type)) %>
  <%= content_tag(:tr, content_tag(:td, Engine.human_attribute_name(:device)) + content_tag(:td, resource.device === -1 ? 'CPU' : "GPU #{resource.device}")) %>
  <%= content_tag(:tr, content_tag(:td, Engine.human_attribute_name(:cached)) + content_tag(:td, (resource.cached ? '开启':'关闭'))) %>
  <%= content_tag(:tr, content_tag(:td, Engine.human_attribute_name(:created_at)) + content_tag(:td, resource.created_at.strftime('%F %T'))) %>
<% end %>