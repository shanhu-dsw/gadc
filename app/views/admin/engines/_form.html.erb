<% content_for :information do %>
  <%= tag.div class: 'row' do %>
    <%= tag.div (manage_text_field form, :full_name), class: 'col-md-4' %>
    <%= tag.div (manage_text_field form, :internal_address), class: 'col-md-4' %>
    <%= tag.div (manage_text_field form, :external_address), class: 'col-md-4' %>
    <%= tag.div (manage_text_field form, :workers), class: 'col-md-4' %>
    <%= tag.div (manage_text_field form, :params), class: 'col-md-4' %>
    <%= tag.div (manage_select_field form, :engine_type, Engine.engine_types.keys, { include_blank: true }), class: 'col-md-4' %>
    <%= tag.div (manage_number_field form, :device), class: 'col-md-4' %>
    <%= content_tag(:div, manage_select_field(form, :cached, { '开启' => true,'关闭' => false }, { include_blank: true }), class: 'col-md-4') %>
  <% end %>
<% end %>

<%= render 'manage/resources/form', form: form, sections: { information: '基本信息' } %>