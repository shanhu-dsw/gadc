<%= render 'manage/resources/show' do |resource| %>
  <%= content_tag(:tr, content_tag(:td, Admin.human_attribute_name(:full_name)) + content_tag(:td, (resource.full_name rescue nil))) %>
  <%= content_tag(:tr, content_tag(:td, User.human_attribute_name(:username)) + content_tag(:td, (resource.user.username rescue nil))) %>
  <%= content_tag(:tr, content_tag(:td, Location.human_attribute_name(:name)) + content_tag(:td, (resource.location ? resource.location.name : '' rescue nil))) %>
  <%= content_tag(:tr, content_tag(:td, Admin.human_attribute_name(:role)) + content_tag(:td, (t resource.role rescue nil))) %>
  <%= content_tag(:tr, content_tag(:td, Admin.human_attribute_name(:created_at)) + content_tag(:td, resource.created_at.strftime('%Y年%m月%d日 %H时%M分'))) %>
<% end %>



