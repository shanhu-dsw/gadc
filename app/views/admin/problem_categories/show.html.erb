<%= render 'manage/resources/show' do |resource| %>
  <%= content_tag(:tr, content_tag(:td, ProblemCategory.human_attribute_name(:name)) + content_tag(:td, resource.name)) %>
  <%= content_tag(:tr, content_tag(:td, ProblemCategory.human_attribute_name(:parent)) + content_tag(:td, (resource.parent.name rescue nil))) %>
  <%= content_tag(:tr, content_tag(:td, ProblemCategory.human_attribute_name(:level)) + content_tag(:td,(t resource.level))) %>
  <%= content_tag(:tr, content_tag(:td, ProblemCategory.human_attribute_name(:created_at)) + content_tag(:td, resource.created_at.strftime('20%y-%m-%d %H:%M:%S'))) %>
<% end %>